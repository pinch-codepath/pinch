<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvGoalNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="65"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="120dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/tvGoalNum"
        android:layout_toRightOf="@+id/tvGoalNum"
        android:text="hours goal"/>

    <TextView
        android:id="@+id/tvCompletedNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_alignLeft="@+id/tvGoalNum"
        android:layout_below="@+id/tvGoal"
        android:text="52"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tvCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvCompletedNum"
        android:layout_toRightOf="@+id/tvCompletedNum"
        android:layout_marginLeft="5dp"
        android:text="hours completed"/>

    <TextView
        android:id="@+id/tvPercentNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tvCompletedNum"
        android:layout_alignLeft="@+id/tvCompletedNum"
        android:text="80%"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tvPrecent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvPercentNum"
        android:layout_toRightOf="@+id/tvPercentNum"
        android:layout_marginLeft="5dp"
        android:text=" to goal"/>

    <ProgressBar
        android:id="@+id/circularProgressbar"
        android:layout_below="@+id/tvPrecent"
        android:layout_marginLeft="100dp"
        android:layout_width="170dp"
        android:layout_height="50dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"
        android:progress="80"
        android:max="100"
        android:secondaryProgress="100"
        android:progressTint="@color/colorPrimary" />

</RelativeLayout>