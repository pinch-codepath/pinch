<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ****************************
         ****** Fragment Title  *****
         **************************** -->

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/event_detail_margin_bottom"
        android:gravity="center"
        android:text="Required skills"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- *********************************
     **************  Skill 1  *************
     ************************************** -->

    <TextView
        android:id="@+id/tvSkill1"
        android:layout_below="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Skill 1"
        android:textSize="@dimen/event_create_edit_text_size" />

    <EditText
        android:id="@+id/etSkill1"
        android:layout_below="@+id/tvSkill1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="50"
        android:layout_marginBottom="@dimen/event_detail_margin_bottom"
        android:layout_alignLeft="@+id/tvSkill1"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/event_create_edit_text_size"
        android:background="#50c5c5c5"
        android:padding="8dp" />

    <!-- *********************************
     **************  Skill 2   ***********
     ************************************** -->

    <TextView
        android:id="@+id/tvSkill2"
        android:layout_below="@+id/etSkill1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Skill 2"
        android:textSize="@dimen/event_create_edit_text_size" />

    <EditText
        android:id="@+id/etSkill2"
        android:layout_below="@+id/tvSkill2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="20"
        android:layout_marginBottom="@dimen/event_detail_margin_bottom"
        android:layout_alignLeft="@+id/tvSkill2"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/event_create_edit_text_size"
        android:background="#50c5c5c5"
        android:padding="8dp" />

    <!-- *********************************
         ************   Skill 3   ***********
         ********************************* -->

    <TextView
        android:id="@+id/tvSkill3"
        android:layout_below="@+id/etSkill2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Skill 3"
        android:textSize="@dimen/event_create_edit_text_size" />

    <EditText
        android:id="@+id/etSkill3"
        android:layout_below="@+id/tvSkill3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="20"
        android:layout_marginBottom="@dimen/event_detail_margin_bottom"
        android:layout_alignLeft="@+id/tvSkill3"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/event_create_edit_text_size"
        android:background="#50c5c5c5"
        android:padding="8dp" />
    <!-- *******************************
         ************* Buttons  ********
         ******************************* -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="2"
        android:layout_below="@+id/etSkill3"
        android:layout_alignLeft="@+id/etSkill3"
        android:layout_alignRight="@+id/etSkill3"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/event_detail_margin_bottom">

        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/event_create_edit_text_size"
            android:background="@color/colorPrimary"
            android:minHeight="30dp"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Cancel"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/event_create_edit_text_size"
            android:background="@color/colorPrimary"
            android:minHeight="30dp"/>

    </LinearLayout>


</RelativeLayout>