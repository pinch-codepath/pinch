<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.pinch.android.activities.EventDetailsActivity">


        <ImageView
            android:id="@+id/ivPic"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/event_detail_margin_bottom" />

        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivPic"
            android:layout_marginBottom="@dimen/event_detail_margin_bottom"
            android:gravity="center"
            android:text="HACK FOR CHANGE"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEventDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvEventName"
            android:layout_marginBottom="@dimen/event_detail_margin_bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="This is an event description. This is an event description. This is an event description. This is an event description. " />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEventDescription"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/event_detail_margin_bottom"
            android:background="#ffd73c2c"
            android:bottomLeftRadius="30dp"
            android:bottomRightRadius="30dp"
            android:text="Sign-up"
            android:topLeftRadius="30dp"
            android:topRightRadius="30dp" />

        <TextView
            android:id="@+id/tvAddressLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSignUp"
            android:layout_centerHorizontal="true"
            android:text="155 9th Street" />

        <TextView
            android:id="@+id/tvAddressLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddressLine1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/event_detail_margin_bottom"
            android:text="San Francisco, CA" />

        <ImageView
            android:id="@+id/ivMap"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/tvAddressLine2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/event_detail_margin_bottom" />

        <TextView
            android:id="@+id/tvRequirementsLabel"
            android:layout_below="@+id/ivMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvEventDescription"
            android:layout_marginBottom="5dp"
            android:text="Requirements:"
            android:textColor="#ffd73c2c" />

        <TextView
            android:id="@+id/tvRequirements"
            android:layout_below="@+id/tvRequirementsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvRequirementsLabel"
            android:layout_marginBottom="15dp"
            android:text="- none" />

        <Button
            android:id="@+id/btnLearnMore"
            android:layout_below="@+id/tvRequirements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:background="@color/colorPrimary"
            android:text="Learn more about&#10;Code for America"
            android:textColor="@android:color/white"/>

    </RelativeLayout>
</ScrollView>
